
<%= form_for @property, :html => { :multipart => true } do |form| %>





  <% if property.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(property.errors.count, "error") %> prohibited this property from being saved:</h2>

      <ul>
      <% property.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div id="fields_go_here">

    <div class="form-group">
      <%= form.label :address %>
      <%= form.text_area :address, :class => 'form-control', :required => true   %>
    </div>

    <div class="form-group">
      <%= form.label :suburb %>
      <%= form.text_field :suburb, :class => 'form-control', :required => true   %>
    </div>

    <div class="form-group">
      <%= form.label :landsize %>
      <%= form.text_field :landsize, :class => 'form-control', :required => true   %>
    </div>

    <div class="form-group">
      <%= form.label :bedrooms %>
      <%= form.text_field :bedrooms, :class => 'form-control', :required => true   %>
    </div>

    <div class="form-group">
      <%= form.label :bathrooms %>
      <%= form.text_field :bathrooms, :class => 'form-control', :required => true   %>
    </div>

    <div class="form-group">
      <%= form.label :private_parking %>
      <%= form.text_field :private_parking, :class => 'form-control', :required => true   %>
    </div>

    <div class="form-group">
      <%= form.label :expected_price %>
      <%= form.text_field :expected_price, :class => 'form-control', :required => true   %>
    </div>

    <div class="form-group">
      <%= form.label :photo %>
      <%= form.file_field :photo, :class => 'form-control'   %>
    </div>

  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

  <!-- <div class="form-group">
    <label></label>
    <%= form.submit :class => 'btn btn-info'  %>
  </div> -->

<% end %>
